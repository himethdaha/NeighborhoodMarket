@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <h1 class="text-primary">Application users</h1>
        </div>
        <div class="col-6 text-right">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary text-white">New User</a>
        </div>
    </div>
    <br />
    <div class="p-4 border rounded">
        <table id="DataTable" class="table table-striped table-hover table-dark" style="width:100%">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">StreetAddress1</th>
                    <th scope="col">StreetAddress2</th>
                    <th scope="col">State</th>
                    <th scope="col">City</th>
                    <th scope="col">PostalCode</th>
                    <th scope="col">PhoneNumber</th>
                    <th>Role</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts
{
    <script src="~/js/ApplicationUser.js"></script>
}
