@{
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var status = Context.Request.Query["status"];

    var all = "text-primary";
    var inprocess = "text-warning";
    var pending = "text-secondary";
    var completed = "text-success";
    var rejected = "text-danger";

    switch(status)
    {
        case "inprocess":
            inprocess = "active text-white";
            break;
        case "pending":
            pending = "active text-white";
            break;
        case "completed":
            completed = "active text-white";
            break;
        case "rejected":
            rejected = "active text-white";
            break;
         default:
            all = "active text-white";
            break;
    }

    }
<br />
<div class="border p-3">
    <div class="d-flex justify-content-between mb-3">
        <h1 class="text-left">Order's List</h1>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                <a  asp-controller="Order" asp-action="Index" asp-route-status="inProcess">
                    <li class="list-group-item" style="background-color:yellow" @inprocess>In Process</li>
                </a>
                <a asp-controller="Order" asp-action="Index" asp-route-status="pending">
                    <li class="list-group-item" style="background-color:dimgrey" @pending>Payment Pending</li>
                </a>
                <a asp-controller="Order" asp-action="Index" asp-route-status="completed">
                    <li class="list-group-item" style="background-color:forestgreen" @completed>Completed</li>
                </a>
                <a asp-controller="Order" asp-action="Index" asp-route-status="rejected">
                    <li class="list-group-item" style="background-color:red" @rejected>Rejected</li>
                </a>
                <a asp-controller="Order" asp-action="Index" asp-route-status="all">
                    <li class="list-group-item" @all>All</li>
                </a>
            </ul>
        </div>
    </div>

    <br /><br />
    <table id="DataTable" class="table table-striped table-hover table-dark" style="width:100%">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Email</th>
                <th scope="col">Order Status</th>
                <th scope="col">Amount</th>
                <th scope="col"></th>
            </tr>
        </thead>
    </table>

</div>

@section Scripts
{
    <script src="~/js/Order.js"></script>
}
